@model List<ServicePerfectCV.WebAdmin.Models.Settings.EmploymentTypeViewModel>
@{
  ViewData["Title"] = "Employment Types";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2>Employment Types</h2>
    <p class="text-muted">Total: @ViewBag.TotalCount employment types</p>
  </div>
  <div>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">Add Employment
      Type</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Settings</a>
  </div>
</div>

<div class="stat-card">
  @if (Model.Any())
  {
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Usage Count</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var type in Model)
          {
            <tr>
              <td><strong>@type.Name</strong></td>
              <td><span class="badge bg-info">@type.UsageCount</span></td>
              <td>@(type.CreatedAt?.ToString("MMM dd, yyyy") ?? "N/A")</td>
              <td>
                <button type="button" class="btn btn-sm btn-outline-primary"
                  onclick="editItem('@type.Id', '@type.Name')">Edit</button>
                <form asp-action="DeleteEmploymentType" asp-route-id="@type.Id" method="post" class="d-inline">
                  @Html.AntiForgeryToken()
                  <button type="submit" class="btn btn-sm btn-outline-danger"
                    onclick="return confirm('Delete?')">Delete</button>
                </form>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  }
  else
  {
    <p class="text-muted">No employment types found</p>
  }
</div>

<div class="modal fade" id="createModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form asp-action="CreateEmploymentType" method="post">
        @Html.AntiForgeryToken()
        <div class="modal-header">
          <h5 class="modal-title">Add Employment Type</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="text" name="Name" class="form-control" placeholder="Employment Type" required />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form asp-action="UpdateEmploymentType" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="editId" />
        <div class="modal-header">
          <h5 class="modal-title">Edit Employment Type</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="text" name="Name" id="editName" class="form-control" required />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <script>
    function editItem(id, name) {
      document.getElementById('editId').value = id;
      document.getElementById('editName').value = name;
      new bootstrap.Modal(document.getElementById('editModal')).show();
    }
  </script>
}
