@{
  ViewData["Title"] = "Settings";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
  <h2>Settings</h2>
  <p class="text-muted">Manage system settings and reference data</p>
</div>

<div class="row">
  <div class="col-md-6 col-lg-4 mb-4">
    <div class="stat-card text-center">
      <svg class="mb-3" style="width: 48px; height: 48px;" viewBox="0 0 24 24" fill="none"
        xmlns="http://www.w3.org/2000/svg">
        <path d="M12 14l9-5-9-5-9 5 9 5z" stroke="currentColor" stroke-width="2" />
        <path
          d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
          stroke="currentColor" stroke-width="2" />
      </svg>
      <h5>Degrees</h5>
      <p class="text-muted">Education degrees</p>
      <a href="@Url.Action("Degrees")" class="btn btn-primary">Manage</a>
    </div>
  </div>

  <div class="col-md-6 col-lg-4 mb-4">
    <div class="stat-card text-center">
      <svg class="mb-3" style="width: 48px; height: 48px;" viewBox="0 0 24 24" fill="none"
        xmlns="http://www.w3.org/2000/svg">
        <path d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2"
          stroke="currentColor" stroke-width="2" />
      </svg>
      <h5>Job Titles</h5>
      <p class="text-muted">Position titles</p>
      <a href="@Url.Action("JobTitles")" class="btn btn-primary">Manage</a>
    </div>
  </div>

  <div class="col-md-6 col-lg-4 mb-4">
    <div class="stat-card text-center">
      <svg class="mb-3" style="width: 48px; height: 48px;" viewBox="0 0 24 24" fill="none"
        xmlns="http://www.w3.org/2000/svg">
        <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" />
      </svg>
      <h5>Employment Types</h5>
      <p class="text-muted">Work arrangements</p>
      <a href="@Url.Action("EmploymentTypes")" class="btn btn-primary">Manage</a>
    </div>
  </div>
</div>

<div class="stat-card">
  <h5 class="mb-3">Quick Tips</h5>
  <ul>
    <li>Degrees are used in education entries</li>
    <li>Job Titles and Employment Types are used in experience entries</li>
    <li>These settings provide dropdown options for users when creating CVs</li>
    <li>Be careful when modifying items as they may be in use by existing CVs</li>
  </ul>
</div>
